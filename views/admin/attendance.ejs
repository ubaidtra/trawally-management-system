<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
      <div class="content-header">
        <h1>Attendance Management</h1>
        <div class="header-actions">
          <input type="date" id="attendanceDate" value="<%= selectedDate %>" onchange="changeDate()">
        </div>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      
      <form action="/admin/attendance" method="POST">
        <input type="hidden" name="date" value="<%= selectedDate %>">
        
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Staff Name</th>
                <th>Status</th>
                <th>Time In</th>
                <th>Time Out</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <% staff.forEach(member => { 
                const att = attendanceMap[member._id.toString()];
              %>
                <tr>
                  <td><%= member.name %></td>
                  <td>
                    <select name="attendance[<%= member._id %>][status]" required>
                      <option value="present" <%= att && att.status === 'present' ? 'selected' : '' %>>Present</option>
                      <option value="absent" <%= att && att.status === 'absent' ? 'selected' : '' %>>Absent</option>
                      <option value="leave" <%= att && att.status === 'leave' ? 'selected' : '' %>>Leave</option>
                    </select>
                  </td>
                  <td>
                    <input type="time" name="attendance[<%= member._id %>][timeIn]" value="<%= att ? att.timeIn || '' : '' %>">
                  </td>
                  <td>
                    <input type="time" name="attendance[<%= member._id %>][timeOut]" value="<%= att ? att.timeOut || '' : '' %>">
                  </td>
                  <td>
                    <input type="text" name="attendance[<%= member._id %>][notes]" value="<%= att ? att.notes || '' : '' %>">
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Attendance</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script>
    function changeDate() {
      const date = document.getElementById('attendanceDate').value;
      window.location.href = '/admin/attendance?date=' + date;
    }
  </script>
</body>
</html>

