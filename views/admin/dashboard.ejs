<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
      <div class="content-header">
        <h1>Admin Dashboard</h1>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      
      <div class="stats-grid">
        <div class="stat-card">
          <h3>Active Staff</h3>
          <p class="stat-number"><%= totalStaff %></p>
          <a href="/admin/staff" class="stat-link">Manage Staff</a>
        </div>
        <div class="stat-card">
          <h3>Total Contracts</h3>
          <p class="stat-number"><%= totalContracts %></p>
          <a href="/admin/contracts" class="stat-link">View Contracts</a>
        </div>
        <div class="stat-card">
          <h3>Total Services</h3>
          <p class="stat-number"><%= totalServices %></p>
          <a href="/admin/services" class="stat-link">View Services</a>
        </div>
        <div class="stat-card">
          <h3>Pending Payments</h3>
          <p class="stat-number"><%= pendingPayments %></p>
        </div>
      </div>
      
      <div class="dashboard-grid">
        <div class="dashboard-section">
          <h2>Recent Contracts</h2>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Client</th>
                  <th>Service Type</th>
                  <th>Status</th>
                  <th>Payment</th>
                </tr>
              </thead>
              <tbody>
                <% recentContracts.forEach(contract => { %>
                  <tr>
                    <td><%= contract.clientName %></td>
                    <td><%= contract.serviceType %></td>
                    <td><span class="badge badge-<%= contract.status %>"><%= contract.status %></span></td>
                    <td><span class="badge badge-<%= contract.paymentStatus %>"><%= contract.paymentStatus %></span></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        
        <div class="dashboard-section">
          <h2>Recent Services</h2>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Client</th>
                  <th>Service Type</th>
                  <th>Status</th>
                  <th>Payment</th>
                </tr>
              </thead>
              <tbody>
                <% recentServices.forEach(service => { %>
                  <tr>
                    <td><%= service.clientName %></td>
                    <td><%= service.serviceType %></td>
                    <td><span class="badge badge-<%= service.status %>"><%= service.status %></span></td>
                    <td><span class="badge badge-<%= service.paymentStatus %>"><%= service.paymentStatus %></span></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
</body>
</html>

