<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
      <div class="content-header">
        <h1>Breakfast Management</h1>
        <div class="header-actions">
          <input type="date" id="breakfastDate" value="<%= selectedDate %>" onchange="changeDate()" style="padding: 0.5rem; border-radius: 4px; border: 1px solid #d1d5db;">
        </div>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div class="stats-grid" style="margin-bottom: 2rem;">
        <div class="stat-card">
          <h3>Total Breakfast Cost</h3>
          <p class="stat-number">D <%= totalAmount.toLocaleString() %></p>
          <p style="font-size: 0.875rem; color: #666; margin-top: 0.5rem;">
            <%= new Date(selectedDate).toLocaleDateString() %>
          </p>
        </div>
        <div class="stat-card">
          <h3>Staff Count</h3>
          <p class="stat-number"><%= staff.length %></p>
          <p style="font-size: 0.875rem; color: #666; margin-top: 0.5rem;">Active Staff</p>
        </div>
      </div>
      
      <form action="/admin/breakfast" method="POST">
        <input type="hidden" name="date" value="<%= selectedDate %>">
        
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Staff Name</th>
                <th>Specialization</th>
                <th>Breakfast Amount (D)</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <% staff.forEach(member => { 
                const breakfast = breakfastRecords[member._id.toString()];
              %>
                <tr>
                  <td><%= member.name %></td>
                  <td><span class="badge badge-<%= member.specialization %>"><%= member.specialization %></span></td>
                  <td>
                    <input 
                      type="number" 
                      name="breakfast[<%= member._id %>][amount]" 
                      value="<%= breakfast ? breakfast.amount : '' %>" 
                      step="0.01" 
                      min="0"
                      placeholder="0.00"
                      style="width: 120px; padding: 0.5rem; border-radius: 4px; border: 1px solid #d1d5db;">
                  </td>
                  <td>
                    <input 
                      type="text" 
                      name="breakfast[<%= member._id %>][notes]" 
                      value="<%= breakfast ? breakfast.notes || '' : '' %>" 
                      placeholder="Optional notes"
                      style="width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #d1d5db;">
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Breakfast Records</button>
          <button type="button" class="btn btn-secondary" onclick="clearAll()">Clear All</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script>
    function changeDate() {
      const date = document.getElementById('breakfastDate').value;
      window.location.href = '/admin/breakfast?date=' + date;
    }

    function clearAll() {
      if (confirm('Are you sure you want to clear all breakfast amounts for this date?')) {
        const inputs = document.querySelectorAll('input[name*="[amount]"]');
        inputs.forEach(input => input.value = '');
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const amountInputs = document.querySelectorAll('input[name*="[amount]"]');
      amountInputs.forEach(input => {
        input.addEventListener('input', function() {
          if (this.value < 0) {
            this.value = 0;
          }
        });
      });
    });
  </script>
</body>
</html>

