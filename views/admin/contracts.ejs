<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
      <div class="content-header">
        <h1>Contract Management</h1>
        <div class="header-actions">
          <button class="btn btn-info" onclick="exportToCSV('contractsTable', 'contracts.csv')">Export CSV</button>
          <button class="btn btn-primary" onclick="toggleModal('createContractModal')">Create New Contract</button>
        </div>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div class="search-filter-bar">
        <input type="text" class="search-input" data-table="contractsTable" placeholder="Search contracts...">
        <select class="filter-select" data-table="contractsTable" data-filter="status">
          <option value="">All Status</option>
          <option value="pending">Pending</option>
          <option value="in-progress">In Progress</option>
          <option value="completed">Completed</option>
          <option value="cancelled">Cancelled</option>
        </select>
        <select class="filter-select" data-table="contractsTable" data-filter="payment">
          <option value="">All Payments</option>
          <option value="paid">Paid</option>
          <option value="unpaid">Unpaid</option>
        </select>
        <span class="table-count" data-count="contractsTable"><%= contracts.length %> items</span>
      </div>
      
      <div class="table-container">
        <table class="data-table" id="contractsTable">
          <thead>
            <tr>
              <th data-sort="client" data-table="contractsTable">Client Name</th>
              <th data-sort="phone" data-table="contractsTable">Phone</th>
              <th data-sort="service" data-table="contractsTable">Service Type</th>
              <th data-sort="date" data-table="contractsTable">Start Date</th>
              <th data-sort="status" data-table="contractsTable">Status</th>
              <th data-sort="fee" data-table="contractsTable">Fee</th>
              <th>Deployments</th>
              <th data-filter="payment">Payment</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% contracts.forEach(contract => { %>
              <tr>
                <td data-filter="client"><%= contract.clientName %></td>
                <td data-filter="phone"><%= contract.clientPhone %></td>
                <td data-filter="service"><%= contract.serviceType %></td>
                <td data-filter="date"><%= new Date(contract.startDate).toLocaleDateString() %></td>
                <td data-filter="status">
                  <div class="status-group">
                    <span class="badge badge-<%= contract.status %>" id="status-badge-<%= contract._id %>"><%= contract.status %></span>
                    <select class="status-select" id="status-select-<%= contract._id %>" onchange="updateStatus('<%= contract._id %>', this.value, 'contract')" title="Change Status">
                      <option value="pending" <%= contract.status === 'pending' ? 'selected' : '' %>>Pending</option>
                      <option value="in-progress" <%= contract.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                      <option value="completed" <%= contract.status === 'completed' ? 'selected' : '' %>>Completed</option>
                      <option value="cancelled" <%= contract.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                      <option value="archived" <%= contract.status === 'archived' ? 'selected' : '' %>>Archived</option>
                    </select>
                  </div>
                </td>
                <td data-filter="fee">D <%= contract.totalFee %></td>
                <td>
                  <% if (contract.deployments && contract.deployments.length > 0) { %>
                    <div class="deployment-info">
                      <span class="badge badge-info"><%= contract.deployments.length %> staff</span>
                      <button class="btn btn-sm btn-link" onclick="viewDeployments('<%= contract._id %>')" title="View Deployments">View</button>
                    </div>
                  <% } else { %>
                    <span class="badge badge-secondary">None</span>
                  <% } %>
                </td>
                <td data-filter="payment">
                  <div class="payment-status-group">
                    <span class="badge badge-<%= contract.paymentStatus %>" id="payment-badge-<%= contract._id %>"><%= contract.paymentStatus %></span>
                    <% if (contract.paymentStatus === 'paid') { %>
                      <button class="btn btn-sm btn-warning payment-toggle-btn" onclick="togglePaymentStatus('<%= contract._id %>', 'unpaid', 'contract')" title="Mark as Unpaid">
                        <span>Unpaid</span>
                      </button>
                    <% } else { %>
                      <button class="btn btn-sm btn-success payment-toggle-btn" onclick="togglePaymentStatus('<%= contract._id %>', 'paid', 'contract')" title="Mark as Paid">
                        <span>Paid</span>
                      </button>
                    <% } %>
                  </div>
                </td>
                <td>
                  <div class="action-buttons">
                    <div class="btn-group-primary">
                      <button class="btn btn-sm btn-primary" onclick="deployStaff('<%= contract._id %>')" title="Deploy Staff">
                        <span>Deploy</span>
                      </button>
                    </div>
                    <div class="btn-group-secondary">
                      <a href="/admin/contracts/<%= contract._id %>/invoice" class="btn btn-sm btn-info" target="_blank" title="Print Invoice">
                        <span>Invoice</span>
                      </a>
                      <% if (contract.paymentStatus === 'paid') { %>
                        <a href="/admin/contracts/<%= contract._id %>/receipt" class="btn btn-sm btn-success" target="_blank" title="Print Receipt">
                          <span>Receipt</span>
                        </a>
                      <% } %>
                    </div>
                    <div class="btn-group-danger">
                      <form action="/admin/contracts/<%= contract._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this contract? This will also delete all associated deployments. This action cannot be undone.')">
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete Contract">
                          <span>Delete</span>
                        </button>
                      </form>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div id="createContractModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Create New Contract</h2>
        <span class="close" onclick="toggleModal('createContractModal')">&times;</span>
      </div>
      <form action="/admin/contracts" method="POST">
        <div class="form-group">
          <label for="clientName">Client Name</label>
          <input type="text" id="clientName" name="clientName" required>
        </div>
        <div class="form-group">
          <label for="clientPhone">Client Phone</label>
          <input type="tel" id="clientPhone" name="clientPhone" required>
        </div>
        <div class="form-group">
          <label for="clientAddress">Client Address</label>
          <textarea id="clientAddress" name="clientAddress" required></textarea>
        </div>
        <div class="form-group">
          <label for="serviceType">Service Type</label>
          <select id="serviceType" name="serviceType" required>
            <option value="Electrical Installation">Electrical Installation</option>
            <option value="Water Pump Installation">Water Pump Installation</option>
            <option value="Borehole Drilling">Borehole Drilling</option>
            <option value="Water Tank Installation">Water Tank Installation</option>
            <option value="Home Services">Home Services</option>
            <option value="Office Installation">Office Installation</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" required></textarea>
        </div>
        <div class="form-group">
          <label for="startDate">Start Date</label>
          <input type="date" id="startDate" name="startDate" required>
        </div>
        <div class="form-group">
          <label for="endDate">End Date (Optional)</label>
          <input type="date" id="endDate" name="endDate">
        </div>
        <div class="form-group">
          <label for="totalFee">Total Fee</label>
          <input type="number" id="totalFee" name="totalFee" step="0.01" required>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="toggleModal('createContractModal')">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Contract</button>
        </div>
      </form>
    </div>
  </div>
  
  <div id="deployStaffModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Deploy Staff</h2>
        <span class="close" onclick="toggleModal('deployStaffModal')">&times;</span>
      </div>
      <form action="/deployment" method="POST">
        <input type="hidden" id="deploy_contractId" name="contractId" value="">
        <input type="hidden" id="deploy_serviceId" name="serviceId" value="" style="display: none;">
        <div class="form-group">
          <label for="deploymentDate">Deployment Date</label>
          <input type="date" id="deploymentDate" name="deploymentDate" required>
        </div>
        <div class="form-group">
          <label for="staffId">Select Staff</label>
          <select id="staffId" name="staffId" multiple required>
            <% staff.forEach(member => { %>
              <option value="<%= member._id %>"><%= member.name %> (<%= member.specialization %>)</option>
            <% }) %>
          </select>
          <small>Hold Ctrl/Cmd to select multiple staff</small>
        </div>
        <div class="form-group">
          <label for="transportationMethod">Transportation Method</label>
          <select id="transportationMethod" name="transportationMethod" required onchange="updateTransportationNote()">
            <option value="public-transport">Public Transport</option>
            <option value="personal-vehicle">Personal Vehicle</option>
            <option value="company-vehicle">Company Vehicle</option>
          </select>
        </div>
        <div class="form-group">
          <label for="transportationCost" id="transportationCostLabel">Transportation Cost</label>
          <input type="number" id="transportationCost" name="transportationCost" step="0.01" value="0" required>
          <small id="transportationNote" style="display: none; color: #3b82f6; margin-top: 0.5rem; display: block;">
            <strong>Note:</strong> When using Personal/Company Vehicle, the cost will be shared equally among all selected staff members.
          </small>
        </div>
        <div class="form-group">
          <label for="notes">Notes</label>
          <textarea id="notes" name="notes"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="toggleModal('deployStaffModal')">Cancel</button>
          <button type="submit" class="btn btn-primary">Deploy Staff</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script>
    
    async function deployStaff(contractId) {
      const contractIdInput = document.getElementById('deploy_contractId');
      const serviceIdInput = document.getElementById('deploy_serviceId');
      const deploymentDateInput = document.getElementById('deploymentDate');
      const staffSelect = document.getElementById('staffId');
      const transportMethodSelect = document.getElementById('transportationMethod');
      const transportCostInput = document.getElementById('transportationCost');
      
      if (!contractIdInput || !deploymentDateInput || !staffSelect || !transportMethodSelect || !transportCostInput) {
        alert('Form elements not found');
        return;
      }
      
      if (serviceIdInput) {
        serviceIdInput.value = '';
      }
      
      contractIdInput.value = contractId;
      deploymentDateInput.value = new Date().toISOString().split('T')[0];
      toggleModal('deployStaffModal');
    }
    
    async function viewDeployments(contractId) {
      try {
        const response = await fetch(`/deployment/api?contractId=${contractId}`);
        const deployments = await response.json();
        
        if (deployments.length === 0) {
          alert('No deployments found for this contract');
          return;
        }
        
        let message = 'Deployments:\n\n';
        deployments.forEach(d => {
          message += `Staff: ${d.staff ? d.staff.name : 'N/A'}\n`;
          message += `Date: ${new Date(d.deploymentDate).toLocaleDateString()}\n`;
          message += `Transport: ${d.transportationMethod}\n`;
          message += `Cost: D ${d.transportationCost}\n`;
          message += `Status: ${d.status}\n\n`;
        });
        alert(message);
      } catch (error) {
        console.error('Error fetching deployments:', error);
        alert('Error loading deployments');
      }
    }

    async function togglePaymentStatus(id, newStatus, type) {
      if (!confirm(`Are you sure you want to mark this as ${newStatus}?`)) {
        return;
      }

      try {
        const url = type === 'contract' 
          ? `/admin/contracts/${id}/payment` 
          : `/admin/services/${id}/payment`;
        
        const response = await fetch(url, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ paymentStatus: newStatus })
        });

        if (response.ok) {
          const data = await response.json();
          const badge = document.getElementById(`payment-badge-${id}`);
          if (badge) {
            badge.textContent = data.paymentStatus;
            badge.className = `badge badge-${data.paymentStatus}`;
          }
          showToast(data.message || 'Payment status updated successfully', 'success');
          setTimeout(() => location.reload(), 1000);
        } else {
          const errorData = await response.json().catch(() => ({}));
          alert('Error updating payment status: ' + (errorData.error || 'Unknown error'));
        }
      } catch (error) {
        console.error('Error updating payment status:', error);
        alert('Error updating payment status. Please try again.');
      }
    }

    async function updateStatus(id, newStatus, type) {
      if (!confirm(`Are you sure you want to change status to ${newStatus}?`)) {
        const selectElement = document.getElementById(`status-select-${id}`);
        const currentStatus = selectElement.dataset.currentStatus || 'pending';
        selectElement.value = currentStatus;
        return;
      }

      try {
        const url = type === 'contract' 
          ? `/admin/contracts/${id}/status` 
          : `/admin/services/${id}/status`;
        
        const response = await fetch(url, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ status: newStatus })
        });

        if (response.ok) {
          const badge = document.getElementById(`status-badge-${id}`);
          badge.textContent = newStatus;
          badge.className = `badge badge-${newStatus}`;
          showToast(`Status updated to ${newStatus}`, 'success');
        } else {
          const errorData = await response.json().catch(() => ({}));
          const selectElement = document.getElementById(`status-select-${id}`);
          const currentStatus = selectElement.dataset.currentStatus || 'pending';
          selectElement.value = currentStatus;
          alert('Error updating status: ' + (errorData.error || 'Unknown error'));
        }
      } catch (error) {
        console.error('Error updating status:', error);
        const selectElement = document.getElementById(`status-select-${id}`);
        const currentStatus = selectElement.dataset.currentStatus || 'pending';
        selectElement.value = currentStatus;
        alert('Error updating status. Please try again.');
      }
    }

    function updateTransportationNote() {
      const method = document.getElementById('transportationMethod').value;
      const note = document.getElementById('transportationNote');
      const label = document.getElementById('transportationCostLabel');
      const staffSelect = document.getElementById('staffId');
      const selectedCount = staffSelect ? staffSelect.selectedOptions.length : 0;
      
      if (method === 'personal-vehicle' || method === 'company-vehicle') {
        note.style.display = 'block';
        if (selectedCount > 0) {
          note.innerHTML = `<strong>Note:</strong> When using ${method === 'personal-vehicle' ? 'Personal' : 'Company'} Vehicle, the total cost will be shared equally among all ${selectedCount} selected staff member${selectedCount > 1 ? 's' : ''}.`;
        } else {
          note.innerHTML = `<strong>Note:</strong> When using ${method === 'personal-vehicle' ? 'Personal' : 'Company'} Vehicle, the cost will be shared equally among all selected staff members.`;
        }
        label.textContent = 'Total Transportation Cost (Shared)';
      } else {
        note.style.display = 'none';
        label.textContent = 'Transportation Cost';
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const staffSelect = document.getElementById('staffId');
      if (staffSelect) {
        staffSelect.addEventListener('change', updateTransportationNote);
      }
      updateTransportationNote();
    });
  </script>
</body>
</html>

