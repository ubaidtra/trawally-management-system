<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
      <div class="content-header">
        <h1>Contract Management</h1>
        <div class="header-actions">
          <button class="btn btn-info" onclick="exportToCSV('contractsTable', 'contracts.csv')">Export CSV</button>
          <button class="btn btn-primary" onclick="toggleModal('createContractModal')">Create New Contract</button>
        </div>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div class="search-filter-bar">
        <input type="text" class="search-input" data-table="contractsTable" placeholder="Search contracts...">
        <select class="filter-select" data-table="contractsTable" data-filter="status">
          <option value="">All Status</option>
          <option value="pending">Pending</option>
          <option value="in-progress">In Progress</option>
          <option value="completed">Completed</option>
        </select>
        <select class="filter-select" data-table="contractsTable" data-filter="payment">
          <option value="">All Payments</option>
          <option value="paid">Paid</option>
          <option value="unpaid">Unpaid</option>
        </select>
        <span class="table-count" data-count="contractsTable"><%= contracts.length %> items</span>
      </div>
      
      <div class="table-container">
        <table class="data-table" id="contractsTable">
          <thead>
            <tr>
              <th data-sort="client" data-table="contractsTable">Client Name</th>
              <th data-sort="phone" data-table="contractsTable">Phone</th>
              <th data-sort="service" data-table="contractsTable">Service Type</th>
              <th data-sort="date" data-table="contractsTable">Start Date</th>
              <th data-sort="status" data-table="contractsTable">Status</th>
              <th data-sort="fee" data-table="contractsTable">Fee</th>
              <th>Deployments</th>
              <th data-filter="payment">Payment</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% contracts.forEach(contract => { %>
              <tr>
                <td data-filter="client"><%= contract.clientName %></td>
                <td data-filter="phone"><%= contract.clientPhone %></td>
                <td data-filter="service"><%= contract.serviceType %></td>
                <td data-filter="date"><%= new Date(contract.startDate).toLocaleDateString() %></td>
                <td data-filter="status"><span class="badge badge-<%= contract.status %>"><%= contract.status %></span></td>
                <td data-filter="fee">D <%= contract.totalFee %></td>
                <td>
                  <% if (contract.deployments && contract.deployments.length > 0) { %>
                    <span class="badge badge-info"><%= contract.deployments.length %> staff</span>
                    <button class="btn btn-sm btn-link" onclick="viewDeployments('<%= contract._id %>')">View</button>
                  <% } else { %>
                    <span class="badge badge-secondary">None</span>
                  <% } %>
                </td>
                <td data-filter="payment"><span class="badge badge-<%= contract.paymentStatus %>"><%= contract.paymentStatus %></span></td>
                <td>
                  <button class="btn btn-sm btn-primary" onclick="deployStaff('<%= contract._id %>')">Deploy Staff</button>
                  <a href="/admin/contracts/<%= contract._id %>/invoice" class="btn btn-sm btn-info" target="_blank">Print Invoice</a>
                  <% if (contract.paymentStatus === 'paid') { %>
                    <a href="/admin/contracts/<%= contract._id %>/receipt" class="btn btn-sm btn-success" target="_blank">Print Receipt</a>
                  <% } %>
                  <form action="/admin/contracts/<%= contract._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this contract? This will also delete all associated deployments. This action cannot be undone.')">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div id="createContractModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Create New Contract</h2>
        <span class="close" onclick="toggleModal('createContractModal')">&times;</span>
      </div>
      <form action="/admin/contracts" method="POST">
        <div class="form-group">
          <label for="clientName">Client Name</label>
          <input type="text" id="clientName" name="clientName" required>
        </div>
        <div class="form-group">
          <label for="clientPhone">Client Phone</label>
          <input type="tel" id="clientPhone" name="clientPhone" required>
        </div>
        <div class="form-group">
          <label for="clientAddress">Client Address</label>
          <textarea id="clientAddress" name="clientAddress" required></textarea>
        </div>
        <div class="form-group">
          <label for="serviceType">Service Type</label>
          <select id="serviceType" name="serviceType" required>
            <option value="Electrical Installation">Electrical Installation</option>
            <option value="Water Pump Installation">Water Pump Installation</option>
            <option value="Borehole Drilling">Borehole Drilling</option>
            <option value="Water Tank Installation">Water Tank Installation</option>
            <option value="Home Services">Home Services</option>
            <option value="Office Installation">Office Installation</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" required></textarea>
        </div>
        <div class="form-group">
          <label for="startDate">Start Date</label>
          <input type="date" id="startDate" name="startDate" required>
        </div>
        <div class="form-group">
          <label for="endDate">End Date (Optional)</label>
          <input type="date" id="endDate" name="endDate">
        </div>
        <div class="form-group">
          <label for="totalFee">Total Fee</label>
          <input type="number" id="totalFee" name="totalFee" step="0.01" required>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="toggleModal('createContractModal')">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Contract</button>
        </div>
      </form>
    </div>
  </div>
  
  <div id="deployStaffModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Deploy Staff</h2>
        <span class="close" onclick="toggleModal('deployStaffModal')">&times;</span>
      </div>
      <form action="/deployment" method="POST">
        <input type="hidden" id="deploy_contractId" name="contractId" value="">
        <input type="hidden" id="deploy_serviceId" name="serviceId" value="" style="display: none;">
        <div class="form-group">
          <label for="deploymentDate">Deployment Date</label>
          <input type="date" id="deploymentDate" name="deploymentDate" required>
        </div>
        <div class="form-group">
          <label for="staffId">Select Staff</label>
          <select id="staffId" name="staffId" multiple required>
            <% staff.forEach(member => { %>
              <option value="<%= member._id %>"><%= member.name %> (<%= member.specialization %>)</option>
            <% }) %>
          </select>
          <small>Hold Ctrl/Cmd to select multiple staff</small>
        </div>
        <div class="form-group">
          <label for="transportationMethod">Transportation Method</label>
          <select id="transportationMethod" name="transportationMethod" required>
            <option value="public-transport">Public Transport</option>
            <option value="personal-vehicle">Personal Vehicle</option>
            <option value="company-vehicle">Company Vehicle</option>
          </select>
        </div>
        <div class="form-group">
          <label for="transportationCost">Transportation Cost</label>
          <input type="number" id="transportationCost" name="transportationCost" step="0.01" value="0" required>
        </div>
        <div class="form-group">
          <label for="notes">Notes</label>
          <textarea id="notes" name="notes"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="toggleModal('deployStaffModal')">Cancel</button>
          <button type="submit" class="btn btn-primary">Deploy Staff</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script>
    
    async function deployStaff(contractId) {
      const contractIdInput = document.getElementById('deploy_contractId');
      const serviceIdInput = document.getElementById('deploy_serviceId');
      const deploymentDateInput = document.getElementById('deploymentDate');
      const staffSelect = document.getElementById('staffId');
      const transportMethodSelect = document.getElementById('transportationMethod');
      const transportCostInput = document.getElementById('transportationCost');
      
      if (!contractIdInput || !deploymentDateInput || !staffSelect || !transportMethodSelect || !transportCostInput) {
        alert('Form elements not found');
        return;
      }
      
      if (serviceIdInput) {
        serviceIdInput.value = '';
      }
      
      contractIdInput.value = contractId;
      deploymentDateInput.value = new Date().toISOString().split('T')[0];
      toggleModal('deployStaffModal');
    }
    
    async function viewDeployments(contractId) {
      try {
        const response = await fetch(`/deployment/api?contractId=${contractId}`);
        const deployments = await response.json();
        
        if (deployments.length === 0) {
          alert('No deployments found for this contract');
          return;
        }
        
        let message = 'Deployments:\n\n';
        deployments.forEach(d => {
          message += `Staff: ${d.staff ? d.staff.name : 'N/A'}\n`;
          message += `Date: ${new Date(d.deploymentDate).toLocaleDateString()}\n`;
          message += `Transport: ${d.transportationMethod}\n`;
          message += `Cost: D ${d.transportationCost}\n`;
          message += `Status: ${d.status}\n\n`;
        });
        alert(message);
      } catch (error) {
        console.error('Error fetching deployments:', error);
        alert('Error loading deployments');
      }
    }
  </script>
</body>
</html>

